<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>Simplify infinite scroll</name>
    <version>1.0</version>
    <author>Has many</author>
    <code>simplify-infinite-scroll</code>
    <link>http://connectinformatica.org</link>
    <file path="catalog/view/theme/*/template/common/header.tpl">
